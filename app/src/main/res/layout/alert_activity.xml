<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/grey_light">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:background="@android:color/white"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_message"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/id_ll_manage_panel_1"
        android:layout_weight="0">

        <Button
            android:text="btn_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_button_00"
            android:padding="5dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_margin="5dp"
            android:textColor="@color/grey" />

        <Button
            android:text="btn_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_button_01"
            android:padding="5dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_margin="5dp"
            android:textColor="@color/grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/id_ll_manage_panel_2"
        android:layout_weight="0">


        <Button
            android:text="btn_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_button_02"
            android:padding="5dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_margin="5dp"
            android:textColor="@color/grey" />

        <Button
            android:text="btn_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_button_03"
            android:padding="5dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_margin="5dp"
            android:textColor="@color/grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/id_ll_manage_panel"
        android:layout_weight="0">

        <Button
            android:text="@string/next_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_button_04"
            android:padding="5dp"
            android:layout_weight="1"
            android:onClick="onManage"
            android:background="@android:color/white"
            android:layout_margin="5dp"
            android:textColor="@color/grey" />

    </LinearLayout>

</LinearLayout>